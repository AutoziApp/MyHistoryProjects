<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2d95d4" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/wd_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/wd_tx" />

            <TextView
                android:id="@+id/tv_organization_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wd_tx"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#eeeeee"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_organization_name"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#eeeeee"
                android:textSize="17dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_record"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/wd_xcjl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_record"
                android:gravity="center_vertical"
                android:text="巡查记录"
                android:textColor="#333333"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xiayiji" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:id="@+id/layout_plan"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/wd_cxjh" />

            <TextView
                android:id="@+id/tv_docName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_plan"
                android:gravity="center_vertical"
                android:text="巡查计划"
                android:textColor="#333333"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xiayiji" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/wd_wdcx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_search"
                android:gravity="center_vertical"
                android:text="文档查询"
                android:textColor="#666666"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xiayiji" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />
        <RelativeLayout
            android:id="@+id/layout_feadback"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_feadback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/wd_wdcx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_feadback"
                android:gravity="center_vertical"
                android:text="文档查询"
                android:textColor="#666666"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xiayiji" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/xcjl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/wd_button_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="21dp"
                        android:layout_marginTop="21dp"
                        android:drawableLeft="@drawable/wd_xcjl"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="巡查记录"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="0.3dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:background="#a0a0a0"
                        android:minHeight="35dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/czfk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/wd_button_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="21dp"
                        android:layout_marginTop="21dp"
                        android:drawableLeft="@drawable/wd_czfk"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="处置反馈"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="0.3dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:background="#a0a0a0"
                        android:minHeight="35dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/xtgl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/wd_button_bg"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="21dp"
                        android:layout_marginTop="21dp"
                        android:drawableLeft="@drawable/wd_wryxx"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="巡查计划"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="0.3dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:background="#a0a0a0"
                        android:minHeight="35dp"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/layout_word_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/wd_button_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="21dp"
                        android:layout_marginTop="21dp"
                        android:drawableLeft="@drawable/wd_xcjl"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="文档搜索"
                        android:textColor="#000"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/wd_button_bg"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="21dp"
                        android:layout_marginTop="21dp"
                        android:drawableLeft="@drawable/wd_czfk"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="处置反馈"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="0.3dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:background="#a0a0a0"
                        android:minHeight="35dp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#EEEEEE" />

            <GridView
                android:id="@+id/wgy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numColumns="2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>