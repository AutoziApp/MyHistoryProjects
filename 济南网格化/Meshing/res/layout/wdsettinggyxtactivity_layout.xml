    <LinearLayout
        android:id="@+id/about_system_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wd_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/yutu_xin" />

        <TextView
            android:id="@+id/set_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="7dp"
            android:text="版本号：1.1"
            android:textColor="#1f6baf"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/set_envname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="7dp"
            android:text="济南市网格化环境监管平台"
            android:textColor="#1f6baf"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/about_system_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/wd_tx"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/base_yutu" />

            <TextView
                android:id="@+id/set_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="7dp"
                android:paddingLeft="3dp"
                android:paddingTop="7dp"
                android:text="中科宇图天下科技有限公司"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/set_ownership"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="7dp"
            android:text="保留所有权利"
            android:textColor="#1f6baf"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>