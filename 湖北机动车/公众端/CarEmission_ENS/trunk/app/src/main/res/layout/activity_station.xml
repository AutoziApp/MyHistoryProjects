<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.mapuni.caremission_ens.fragment.JXStationFragment">
    <include layout="@layout/toolbar_activity"/>
    <include layout="@layout/request_failed"
        android:id="@+id/showFailed"/>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        app:rowCount="2"
        app:columnCount="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/stationLayout"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/zhandianxinxi"/>
            <TextView
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:layout_height="20dp"
                android:text="站点信息"
                android:textSize="13sp"
                android:textColor="@color/item_group_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/airLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/kongqizhiliang"/>
            <TextView
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:layout_height="20dp"
                android:text="空气质量"
                android:textSize="13sp"
                android:textColor="@color/item_group_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/jishuchaxun"/>
            <TextView
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:layout_height="20dp"
                android:text="维修机构"
                android:textSize="13sp"
                android:textColor="@color/item_group_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sunLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/weiguicaozuo"/>
            <TextView
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:layout_height="20dp"
                android:text="违规操作"
                android:textSize="13sp"
                android:textColor="@color/item_group_text"/>
        </LinearLayout>
    </android.support.v7.widget.GridLayout>
    <!-- TODO: Update blank fragment layout -->
</LinearLayout>

