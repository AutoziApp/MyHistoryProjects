<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zyf="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="80dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/file_icon_gray"
        android:id="@+id/fileImg"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
       >
        <LinearLayout
            android:id="@+id/fileLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="69.7dp"
          >
            <RelativeLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <View android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/center"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/item_group_text"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/center"
                    android:id="@+id/fileName" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignTop="@+id/center"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/time_color"
                    android:id="@+id/nameBelow" />
                <TextView
                    android:visibility="invisible"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignTop="@+id/nameBelow"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/time_color"
                    android:id="@+id/localSize" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/progressLayout"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <com.mapuni.caremission_ens.views.ButtonProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    zyf:radius="20dp"
                    android:padding="5dp"
                    android:progress="0" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:background="#cdcdcd"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    </LinearLayout>
</LinearLayout>
