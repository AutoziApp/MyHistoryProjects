<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dd_dialog_padding"
    android:clickable="true"
    android:paddingBottom="@dimen/dd_dialog_padding"
    android:paddingLeft="@dimen/dd_dialog_padding"
    android:paddingRight="@dimen/dd_dialog_padding">

    <ListView
        android:id="@+id/di_dialog_list"
        android:layout_width="match_parent"
        android:dividerHeight="@dimen/dd_dialog_line_height"
        android:overScrollMode="never"
        android:divider="@color/dc_default_line"
        android:background="@drawable/dd_item_round_shape"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/dl_dialog_cancel"/>
</LinearLayout>