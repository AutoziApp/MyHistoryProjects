<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="150dp"
    android:background="#33000000">

    <TextView
        android:id="@+id/tv_temp"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_weather"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher"
        android:layout_toRightOf="@id/tv_temp"
        android:layout_alignBottom="@id/tv_temp"
        android:paddingBottom="10dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_weather"
        android:layout_toRightOf="@id/iv_weather"
        android:layout_alignBottom="@id/iv_weather"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/tv_temp"
        android:layout_alignLeft="@id/tv_temp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_temp_range"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/temp"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_wind"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/fengxiang"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_shidu"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/shidu"
                android:textColor="@color/white"/>
        </RelativeLayout>





    </LinearLayout>
</RelativeLayout>