<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:visibility="gone"
    android:id="@+id/listview_search_parentview">
    <LinearLayout 
       android:orientation="horizontal"  
     android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView 
        android:visibility="gone"
      style="@style/textViewStyle"
      android:id="@+id/listview_search_textview"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <AutoCompleteTextView 
       
       android:hint="@string/cxqy"
      android:id="@+id/listview_search_autoview"
     style="@style/textViewStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView 
       
        android:src="@drawable/icon_menu_query"
        android:layout_alignParentRight="true"
        android:id="@+id/listview_search_imageview"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</RelativeLayout>