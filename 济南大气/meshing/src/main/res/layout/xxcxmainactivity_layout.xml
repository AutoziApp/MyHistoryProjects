<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_view_border">

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fl_imageView"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/title_btn_search_s" />

        <ImageView
            android:id="@+id/fl_imageView"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/fl_icon" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ivSearch"
            android:background="@null"
            android:hint="@string/search_hint"
            android:padding="5dp" />

    </RelativeLayout>


    <com.goldnut.app.sdk.view.pullrefresh.PullToRefreshListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@null"
        android:dividerHeight="0dp"/>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xxcx_wghjg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/grid_wgh"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="网格化监管"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/xxcx_gssk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/grid_gssk"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="国省市控"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/xxcx_wry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/grid_wry"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="污染源"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xxcx_xzwl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/grid_xzwl"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="乡镇网络"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/xxcx_jzyc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/grid_jzyc"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="建筑扬尘"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/xxcx_ztyc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/grid_ztyc"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="渣土扬尘"
                    android:textColor="#000000" />
