<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/siteevidence_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </RelativeLayout>

    <ListView
        android:id="@+id/siteevidence_ListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MulPrint"
        android:layout_below="@+id/parentLayout"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="5dp">
    </ListView>

    <!-- <GridView android:id="@+id/siteevidence_gridview" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_below="@+id/parentLayout" -->
    <!-- android:numColumns="3" -->
    <!-- android:horizontalSpacing="2dp" -->
    <!-- android:verticalSpacing="2dp" -->
    <!-- android:layout_above="@+id/siteevidence_bottom_LinearLayout"/> -->

    <LinearLayout
        android:id="@+id/siteevidence_bottom_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_menu_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_menu"
        android:gravity="fill_horizontal"
        android:orientation="horizontal" >
    </LinearLayout>

    <Button
        android:id="@+id/MulPrint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/siteevidence_bottom_LinearLayout"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_bottom_menu"
        android:text="打印"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>