<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qyjbxx_query_qymc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业名称："
            android:textColor="@color/item_text" />

        <EditText
            android:id="@+id/qyjbxx_query_qymc"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@drawable/edging" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qyjbxx_query_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属区县："
            android:textColor="@color/item_text" />

        <com.mapuni.mobileenvironment.widget.NiceSpinner
              android:background="@drawable/kuang"
                android:drawableRight="@mipmap/arrow_down"
                android:id="@+id/spinnerA"
                android:layout_width="match_parent"
                android:layout_height="36dp" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qyjbxx_query_county_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属城镇："
            android:textColor="@color/item_text" />


            <Spinner
                android:id="@+id/qyjbxx_query_county_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/edging"/>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qyjbxx_query_village_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属乡村："
            android:textColor="@color/item_text" />



            <Spinner
                android:id="@+id/qyjbxx_query_village_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/edging"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/edging1"
            android:text="取消"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="20dp"
            android:layout_toLeftOf="@id/btn_no"
            android:layout_weight="1"
            android:background="@drawable/edging1"
            android:text="确定"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>