<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.mapuni.mobileenvironment.activity.ExecuteAddActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
       >
                <include layout="@layout/toolbar_activity"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="35dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/the_team"
                        android:textSize="15sp"
                        android:textColor="@color/input_text_color"
                        android:layout_marginRight="10dp"/>

                    <com.mapuni.mobileenvironment.widget.NiceSpinner
                        android:id="@+id/spinnerA"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:drawableRight="@mipmap/select"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="35dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/the_executor"
                        android:textSize="15sp"
                        android:textColor="@color/input_text_color"
                        android:layout_marginRight="10dp"/>

                    <com.mapuni.mobileenvironment.widget.NiceSpinner
                        android:id="@+id/spinnerB"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:drawableRight="@mipmap/select"
                        />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="35dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/the_end_time"
                        android:textSize="15sp"
                        android:textColor="@color/input_text_color"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:background="@drawable/selector"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:paddingLeft="5dp"
                        android:drawableRight="@drawable/iconfont_rili"
                        android:paddingRight="10dp"
                        android:singleLine="true"/>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="35dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/the_describe"
                        android:textSize="15sp"
                        android:textColor="@color/input_text_color"
                        android:layout_marginRight="10dp"/>

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:background="@drawable/kuang"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:paddingLeft="5dp"
                       />
                </LinearLayout>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="执行"
                        android:background="@drawable/commit_bg"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/execute" />
            </LinearLayout>
    </ScrollView>

</LinearLayout>
