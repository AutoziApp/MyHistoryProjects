<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="38dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="right|center_vertical"
            android:text="@string/task_from"
            android:textColor="@color/factory_item_name_color"
            android:layout_marginRight="10dp"/>
        <com.mapuni.mobileenvironment.widget.NiceSpinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:paddingLeft="10dp"
            android:textColor="@color/factory_item_value_color"
            android:text="项目评估说明"
            android:singleLine="true"
            android:enabled="true"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/select"
            />
</LinearLayout>
