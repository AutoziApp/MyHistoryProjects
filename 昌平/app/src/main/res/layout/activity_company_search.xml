<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/PagerBg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="企业基本信息查询"
            android:textColor="@android:color/white"
            android:textSize="@dimen/DIMEN_20SP" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qyjbxx_query_qymc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业名称："
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/qyjbxx_query_qymc"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:background="@drawable/kuang"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qyjbxx_query_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属区县："
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edging">

            <com.mapuni.mobileenvironment.widget.NiceSpinner
                android:id="@+id/qyjbxx_query_city_name"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:drawableRight="@mipmap/select" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qyjbxx_query_county_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属城镇："
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edging">

            <com.mapuni.mobileenvironment.widget.NiceSpinner
                android:id="@+id/qyjbxx_query_county_name"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:drawableRight="@mipmap/select" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qyjbxx_query_village_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="所属乡村："
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edging">

            <com.mapuni.mobileenvironment.widget.NiceSpinner
                android:id="@+id/qyjbxx_query_village_name"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:drawableRight="@mipmap/select" />

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_search"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edging1"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>