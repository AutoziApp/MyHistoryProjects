<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.0dip" />
            <gradient
                android:angle="270.0"
                android:centerColor="#00BDF2"
                android:centerY="2.0"
                android:endColor="#00BDF2"
                android:startColor="#00BDF2" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />
                <gradient
                    android:angle="270.0"
                    android:centerColor="#ff0000DD"
                    android:centerY="2.0"
                    android:endColor="#ff0000DD"
                    android:startColor="#ff0000DD" />
            </shape>
        </clip>
    </item>

</layer-list>