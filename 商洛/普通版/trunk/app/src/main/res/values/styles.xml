<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/pickerview_bg_topbar</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="Theme.AppStartLoadTranslucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 我的页面textViewStyle -->
    <style name="tvStyle" >
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 详情列表textViewStyle -->
    <style name="tvStyle1" >
        <item name="android:textColor">@color/base_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 详情列表textViewStyle2 -->
    <style name="tvStyle2" >
        <item name="android:textColor">@color/base_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 上报人物详情处理流程列表textViewStyle -->
    <style name="tvStyle3" >
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--延时申请详情TextViewTitleStyle-->

    <style name="tvStyle4" >
        <item name="android:textColor">@color/delay_txt_title_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:background">@color/delay_txt_title_background_color</item>-->
        <item name="android:gravity">center_vertical</item>
    </style>
    
    
    
    
    <!-- 小号深色 -->
    <style name="TxtSmallDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <!-- 小号灰色 -->
    <style name="TxtSmallGrey">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>
    </style>


    <style name="editTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/edittext</item>
        <item name="colorControlActivated">@color/edittext</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_check_style</item>
    </style>


    <style name="dialog_change_card" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="RegDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/attention_guide_in</item>
        <item name="android:windowExitAnimation">@anim/attention_guide_out</item>
    </style>


    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>
</resources>
