<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tvStyle4"
                    android:text="任务详情"
                    />
                <include layout="@layout/line_one_dip"/>

                <include layout="@layout/layout_task_detail1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tvStyle4"
                    android:text="附件信息"
                    />

                <include layout="@layout/line_one_dip"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_noAttachInfo"
                        android:layout_width="wrap_content"
                        android:text="暂无附件信息..."
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/ll_fragment_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/tvStyle4"
                    android:text="处理流程"/>
                <include layout="@layout/line_one_dip"/>

                <include layout="@layout/layout_recyclerview"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
