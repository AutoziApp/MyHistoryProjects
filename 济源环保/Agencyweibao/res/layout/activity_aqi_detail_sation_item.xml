<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dip"
    android:gravity="top"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/station_name"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:text="北京"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/station_value_layout"
            android:layout_width="wrap_content"
            android:layout_height="32dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/aqi_level_1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/station_value_du"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:minWidth="30dip"
                android:text="中度"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/station_value"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginRight="10dip"
                android:gravity="center"
                android:minWidth="30dip"
                android:text="25"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/station_line"
        android:layout_width="fill_parent"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_height="0.5px"
        android:background="@drawable/weather_line_title" />

</LinearLayout>