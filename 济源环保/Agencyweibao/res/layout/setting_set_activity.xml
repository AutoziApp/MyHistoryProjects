<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/top_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/afterlogin_return_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/update_btn"
            android:src="@drawable/title_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yuyinbaobre"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/timeline_feedcard_original_background"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/yushengy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="语音播报方言设置"
            android:textColor="#595959"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/yubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:padding="8dp"
            android:text="普通话(女)"
            android:textColor="#595959" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/timeline_feedcard_original_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="推  送"
                android:textColor="#595959"
                android:textSize="15sp" />

            <com.jy.environment.widget.SwitchButton
                android:id="@+id/mSlideButton1"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8.0dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#C9C9C9" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/push1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="显示定位"
                android:textColor="#595959"
                android:textSize="15sp" />

            <com.jy.environment.widget.SwitchButton
                android:id="@+id/mSlideButton2"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8.0dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#C9C9C9" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/push2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="通知栏提醒"
                android:textColor="#595959"
                android:textSize="15sp" />

            <com.jy.environment.widget.SwitchButton
                android:id="@+id/mSlideButton3"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8.0dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#C9C9C9" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/push3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="访问通讯录"
                android:textColor="#595959"
                android:textSize="15sp" />

            <com.jy.environment.widget.SwitchButton
                android:id="@+id/mSlideButton4"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8.0dip" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>