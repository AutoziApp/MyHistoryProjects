<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_pop_wp_background"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:duplicateParentState="false"
    android:background="@drawable/map_title_icon_background"
    android:alpha="0.5"
    android:orientation="vertical" >
    
    <LinearLayout android:id="@+id/map_pop_wp_cont"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="30dp">
            
            <TextView android:id="@+id/map_pop_wp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:shadowColor="#aa999999"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            />
            
        </RelativeLayout>
        
        
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            
            <ImageView android:id="@+id/map_pop_wp_pic"
                android:layout_width="50dp"                
                android:layout_height="50dp"/>
            
            <View android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#cccccc"/>
            
            <View android:layout_width="5dp"
                android:layout_height="fill_parent"
                />
            
            <LinearLayout 
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                
                <TextView android:id="@+id/map_pop_wp_weathername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                <View android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"/>
                
                <TextView android:id="@+id/map_pop_wp_feeltemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
               <include 
                   android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/map_feeltemp_graph"/>
                
            </LinearLayout>
            
            <View android:layout_width="5dp"
                android:layout_height="fill_parent"
                />
            
        </LinearLayout>
        
    </LinearLayout>
    
    

</LinearLayout>
