<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:id="@+id/map_pop_ac_main"
    android:alpha="0.5"
    android:background="@drawable/map_title_icon_background"
    android:orientation="vertical"
    android:gravity="center_horizontal" >
    
    <LinearLayout android:id="@+id/map_pop_ac_cont"
        android:layout_width="190dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="invisible">
        
        <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="50dp">
	        
	        <ImageView android:id="@+id/map_pop_ac_titleimg"
	                android:layout_width="50dp"
	                android:layout_height="50dp"
	                android:padding="5dp">                
	            </ImageView>
	            
	        <View android:id="@+id/map_pop_ac_line1"
	            android:layout_height="fill_parent"
	            android:layout_width="1dp"
	            android:background="#40000000"
	            android:layout_toRightOf="@id/map_pop_ac_titleimg"/>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/map_pop_ac_line1"
	            android:layout_alignParentBottom="true"
	            android:orientation="vertical">
	            
	            <TextView android:id="@+id/map_pop_ac_title"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="20sp"
	                android:layout_marginLeft="5dp"
	                android:shadowColor="#aa999999"
		            android:shadowDx="2"
		            android:shadowDy="2"
		            android:shadowRadius="2"
		            />
	            
	            <TextView android:id="@+id/map_pop_ac_realval"
	                    android:layout_width="wrap_content"
	                    android:singleLine="true"
	                    android:textSize="11sp"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    />
	            
	        </LinearLayout>
	        
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="20dp">
	        
	        <LinearLayout android:id="@+id/map_pop_ac_24his"
	            android:layout_width="wrap_content"
	            android:layout_height="20dp"
	            android:layout_centerInParent="true"
	            >
	            
	            <ImageView 
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:background="@drawable/map_value_history"/>
	            
	            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="20dp"
	            android:text="24h内历史记录"/>
	            
	        </LinearLayout>
	        
	        
	        
	        <View 
	            android:layout_width="fill_parent"
	            android:layout_height="0.5dp"
	            android:background="#20000000"
	            android:layout_toLeftOf="@id/map_pop_ac_24his"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"/>
	        
	        <View 
	            android:layout_width="fill_parent"
	            android:layout_height="0.5dp"
	            android:background="#20000000"
	            android:layout_toRightOf="@id/map_pop_ac_24his"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"/>
	        
	    </RelativeLayout>
	    
	    <ScrollView 
	        android:layout_width="fill_parent"
	        android:layout_height="110dp">
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                
	                <TextView android:layout_width="30dp"
	                    android:layout_height="20dp"
	                    android:gravity="bottom"
	                    android:textSize="8sp"
	                    android:text="AQI"/>
	                <LinearLayout android:id="@+id/map_pop_ac_chart_aqi"
	                    android:layout_width="160dp"
	                    android:layout_height="20dp"
	                    android:orientation="horizontal"
	                    android:gravity="bottom"
	                    ></LinearLayout>
	                
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                
	                <TextView android:layout_width="30dp"
	                    android:layout_height="20dp"
	                    android:gravity="bottom"
	                    android:textSize="8sp"
	                    android:text="PM10"/>
	                <LinearLayout android:id="@+id/map_pop_ac_chart_pm10"
	                    android:layout_width="160dp"
	                    android:layout_height="20dp"
	                    android:orientation="horizontal"
	                    android:gravity="bottom"
	                    ></LinearLayout>
	                
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                
	                <TextView android:layout_width="30dp"
	                    android:layout_height="20dp"
	                    android:gravity="bottom"
	                    android:textSize="8sp"
	                    android:text="PM2.5"/>
	                <LinearLayout android:id="@+id/map_pop_ac_chart_pm25"
	                    android:layout_width="160dp"
	                    android:layout_height="20dp"
	                    android:orientation="horizontal"
	                    android:gravity="bottom"
	                    ></LinearLayout>
	                
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                
	                <TextView android:layout_width="30dp"
	                    android:layout_height="20dp"
	                    android:gravity="bottom"
	                    android:textSize="8sp"
	                    android:text="NO2"/>
	                <LinearLayout android:id="@+id/map_pop_ac_chart_no2"
	                    android:layout_width="160dp"
	                    android:layout_height="20dp"
	                    android:orientation="horizontal"
	                    android:gravity="bottom"
	                    ></LinearLayout>
	                
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                
	                <TextView android:layout_width="30dp"
	                    android:layout_height="20dp"
	                    android:gravity="bottom"
	                    android:textSize="8sp"
	                    android:text="SO2"/>
	                <LinearLayout android:id="@+id/map_pop_ac_chart_so2"
	                    android:layout_width="160dp"
	                    android:layout_height="20dp"
	                    android:orientation="horizontal"
	                    android:gravity="bottom"
	                    ></LinearLayout>
	                
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                
	                <TextView android:layout_width="30dp"
	                    android:layout_height="20dp"
	                    android:gravity="bottom"
	                    android:textSize="8sp"
	                    android:text="CO"/>
	                <LinearLayout android:id="@+id/map_pop_ac_chart_co"
	                    android:layout_width="160dp"
	                    android:layout_height="20dp"
	                    android:orientation="horizontal"
	                    android:gravity="bottom"
	                    ></LinearLayout>
	                
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                
	                <TextView android:layout_width="30dp"
	                    android:layout_height="20dp"
	                    android:gravity="bottom"
	                    android:textSize="8sp"
	                    android:text="O3"/>
	                <LinearLayout android:id="@+id/map_pop_ac_chart_o3"
	                    android:layout_width="160dp"
	                    android:layout_height="20dp"
	                    android:orientation="horizontal"
	                    android:gravity="bottom"
	                    ></LinearLayout>
	                
	            </LinearLayout>
	            
	        </LinearLayout>
	        
	    </ScrollView>
	    
	    <HorizontalScrollView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:visibility="invisible"
	        >
	        
	        <LinearLayout android:id="@+id/map_pop_ac_historyval"
		        android:layout_width="fill_parent"
		        android:orientation="horizontal"
		        android:layout_height="wrap_content"
		        >
		        
		    </LinearLayout>
	        
	    </HorizontalScrollView>
        
    </LinearLayout>
    
    
    
    
    

</LinearLayout>
