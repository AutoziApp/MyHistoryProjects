<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragviewbg" >

    <RelativeLayout
        android:id="@+id/rlt_title"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@drawable/map_drag_title"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/txt_addr"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#444444"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/title_update"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/title_update"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/rlt_title"
        android:orientation="vertical" 
        android:gravity="center_horizontal">

        <ListView
            android:id="@+id/lst_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>

<!--         <ImageView -->
            

<!--             android:layout_centerHorizontal="true" -->
<!--             android:src="@drawable/title_update" -->
<!--             android:visibility="invisible" /> -->
        <ProgressBar          
            style="?android:attr/progressBarStyle"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_update1"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>