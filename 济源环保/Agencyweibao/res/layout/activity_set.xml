<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#072736"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back_btn_style" />

        <TextView
            android:id="@+id/toptitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/back"
            android:gravity="center"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dip"
        android:background="#f0f0f0"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ic"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/version_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dip"
            android:text="@string/app_name"
            android:textColor="#999999"
            android:textSize="14sp" />

<!--         <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/version_title"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dip"
            android:text="版本号:1.10"
            android:textColor="#2a2a2a"
            android:textSize="16sp" /> -->
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/version_lay"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/version_text"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:drawableLeft="@drawable/guanli"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="6dip"
            android:paddingRight="3dip"
            android:text=" 版本号"
            android:textColor="#242424"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="v 1.10"
            android:textColor="#a6a6a6"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:background="@drawable/mine_icon_you_noclick_style" />
    </LinearLayout>
 <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#f0f0f0" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/gengxin"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:drawableLeft="@drawable/set_icon_1gxin"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="1dip"
            android:text="版本更新"
            android:textColor="#242424"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/getxin_value"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="已是最新版"
            android:textColor="#a6a6a6"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:background="@drawable/mine_icon_you_noclick_style" />
    </LinearLayout>

 <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/qinglihuancun"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:drawableLeft="@drawable/set_icon_3qli"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="1dip"
            android:text="清理缓存"
            android:textColor="#2a2a2a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="2.0M"
            android:textColor="#999999"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:background="@drawable/mine_icon_you_noclick_style" />
    </LinearLayout>

    
    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:visibility="gone"
        android:orientation="vertical"
         >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="河南省环保厅"
            android:textColor="#999999"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="河南省环境监测中心"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="技术支持:中科宇图科技股份有限公司"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>