<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_city_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_city_number"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="1"
            android:textColor="#4e4e4e"
            android:textSize="16sp" />
        <!-- android:textColor="#b4ffffff" -->

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:gravity="center_vertical|left"
                    android:text="郑州"
                    android:textColor="#4e4e4e"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>
        <!--
             <TextView
            android:id="@+id/tv_city_aqi"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="40"
            android:textColor="#fff"
            android:textSize="16sp" />-->

        <LinearLayout
            android:id="@+id/tv_city_aqi_layout"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_marginRight="10dip"
            android:background="@drawable/aqi_level_1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_city_aqi_du"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:minWidth="30dip"
                android:text="中度"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_city_aqi"
                android:layout_width="wrap_content"
                android:layout_height="39dip"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:minWidth="30dip"
                android:text="25"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/sanshi_balck" />
    <!--
    <ImageView
        android:id="@+id/divider3"
        style="@style/Dotted"
        android:layout_width="fill_parent"
        android:scaleType="fitXY" />-->

</LinearLayout>