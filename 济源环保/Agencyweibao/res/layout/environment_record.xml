<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/top_bg" >

        <ImageView
            android:id="@+id/record_return_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/update_btn"
            android:src="@drawable/title_back_selector" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="噪声监测"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/record_title_share"
            android:layout_width="23.0dip"
            android:layout_height="23.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView1"
            android:layout_marginRight="10dp"
            android:background="@drawable/update_btn"
            android:src="@drawable/title_share_selector" />
    </RelativeLayout>

<com.jy.environment.widget.DialView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/dialView"
    />

</LinearLayout>