<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
      
	<com.echo.holographlibrary.LineGraph3
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linegraph1"/>
	
    <LinearLayout
        android:id="@+id/weekLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linegraph1"
        >
        <TextView
            android:id="@+id/week0Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.0dip"
            android:textColor="#000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/week1Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.0dip"
            android:textColor="#000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/week2Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.0dip"
            android:textColor="#000"
            android:gravity="center_horizontal"
            />
        <!-- android:textColor="#C6C6C6" -->
        <TextView
            android:id="@+id/week3Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.0dip"
            android:textColor="#000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/week4Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.0dip"
            android:textColor="#000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/week5Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.0dip"
            android:textColor="#000"
            android:gravity="center_horizontal"
            />
   
    </LinearLayout>
  

</RelativeLayout>