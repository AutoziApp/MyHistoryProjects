<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/findPWD_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/top_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/findPWD_return_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
           
            android:scaleType="fitCenter"
             android:src="@drawable/title_back_selector"
        android:background="@drawable/update_btn"/>


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="#fff"
            android:textSize="20dp" />
    </RelativeLayout>


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="40dip"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/bg_ll1"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_weight="0.95"
                android:background="@drawable/text_bg"
                android:orientation="horizontal" >

                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="用户名: "
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/findPWD_userName_et"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入用户名"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>

          
        </LinearLayout>

 <LinearLayout
     android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="40dip"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/bg_ll"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_weight="0.95"
                android:background="@drawable/text_bg"
                android:orientation="horizontal" >

                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="邮箱: "
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/findPWD_email_et"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入您的注册邮箱"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>

          
        </LinearLayout>
        

        <Button
            android:id="@+id/findPWD_submit"
            android:layout_width="100dp"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
           android:layout_centerHorizontal="true"
            android:background="@drawable/send_btn"
            android:text="提  交"
            android:textColor="#fff"
            android:textSize="18dp" />
    

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/layout_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>