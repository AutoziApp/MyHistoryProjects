<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dip"
    android:layout_margin="10dip"
    android:background="@drawable/corn_back" >

    <TextView
        android:id="@+id/qiaodao_text_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="温馨提示                       "
        android:textSize="12sp"
        android:textColor="#232323"
        />

    <TextView
        android:id="@+id/qiandao_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/qiaodao_text_first"
        android:layout_below="@+id/qiaodao_text_first"
        android:layout_marginTop="7dp"
        android:text="登录后可以进行签到和抽奖哦!"
        android:textSize="11sp"
        android:textColor="#6b6b6b" />

    <TextView
        android:id="@+id/qiandao_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qiandao_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/corn_backqiaodao"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="登录" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/qiandao_btn"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        android:text="TextView" />

</RelativeLayout>