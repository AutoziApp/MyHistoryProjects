<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >
    
    
    <RelativeLayout
        android:id="@+id/login_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/top_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/login_return_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
          
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
             android:src="@drawable/title_back_selector"
        android:background="@drawable/update_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="20sp" />

    </RelativeLayout>

       <LinearLayout
           android:id="@+id/pro_item_bg"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/login_title_bar"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:gravity="center_horizontal"
           android:orientation="vertical" >

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="40dip"
               android:layout_marginLeft="20dip"
               android:layout_marginRight="20dip"
               android:layout_marginTop="30dip"
               android:layout_weight="0.15"
               android:background="@drawable/ic_preference_first_normal" >

               <ImageView
                   android:id="@+id/phone_number_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_alignParentLeft="true"
                   android:gravity="center_vertical"
                   android:background="@drawable/username_denglu" />
                               <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="14.0dip"
                    android:layout_toRightOf="@+id/phone_number_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10.0dip"
                    android:background="#cccccc" />

               <EditText
                   android:id="@+id/loginUserNameEdit"
                   android:layout_height="fill_parent"
                   android:layout_width="fill_parent"
                   android:layout_alignParentRight="true"
                   android:background="@null"
                   android:layout_toRightOf="@id/phone_number_tv"
                   android:gravity="center_vertical"
                   android:hint="请输入用户名"
                   android:layout_marginLeft="20dip"
                   android:textColor="#000"
                   android:textSize="16dp" />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="40dip"
               android:layout_marginLeft="20dip"
               android:layout_marginRight="20dip"
               android:background="@drawable/ic_preference_last_normal" >

               <ImageView
                   android:id="@+id/login_pwd_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_alignParentLeft="true"
                   android:gravity="center_vertical"
                   android:paddingLeft="5dip"
                   android:background="@drawable/password_denglu"
                   />
                               <View
                    android:id="@+id/login_pwd_view"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/login_pwd_tv"
                    android:layout_marginBottom="14.0dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10.0dip"
                    android:background="#cccccc" />

               <EditText
                   android:id="@+id/loginPasswordEdit"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_alignParentRight="true"
                   android:layout_toRightOf="@id/login_pwd_tv"
                   android:background="@null"
                   android:gravity="center_vertical"
                   android:inputType="textPassword"
                   android:maxEms="6"
                   android:hint="请输入密码"
                   android:layout_marginLeft="20dp"
                   android:textSize="16dp" />
           </RelativeLayout>

           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dip"
               android:orientation="horizontal"
                >

               <CheckBox
                   android:id="@+id/loginRememberMeCheckBox"
                   style="@style/MyCheckBox"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_marginLeft="40dip"
                   android:text="记住密码"
                   android:textColor="#000"
                   android:textSize="15dp" />

           </LinearLayout>

           <Button
               android:id="@+id/loginSubmit"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="20dip"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"
               android:background="@drawable/exposure_next"
               android:textSize="20sp"
               android:text="登录"
               android:textColor="#fff"
                />
           
           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               android:orientation="horizontal" >

               <TextView
                   android:id="@+id/find_pwd_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="找回密码"
                   android:textSize="20sp"
                   android:textColor="#007dc9"
                    />

               <TextView
                   android:id="@+id/loginRegister"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentTop="true"
                   android:text="快速注册"
                   android:textColor="#007dc9"
                   android:textSize="20sp" />
  
           </RelativeLayout>
           <RelativeLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal" >
               <ImageView
                   android:id="@+id/tvWeibo" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp"
                   android:background="@drawable/login_weibo_btn"
                   android:visibility="gone"
                   />

               <ImageView
                   android:id="@+id/tvQq"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginRight="30dp"
                   android:background="@drawable/login_qq_btn" />
               
           </RelativeLayout>


           <!-- </LinearLayout> -->
       </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/login_title_bar"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/layout_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>
