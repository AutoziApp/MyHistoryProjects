<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dip"
    android:background="@drawable/choujiang_bg"
    android:orientation="vertical"
    android:paddingBottom="10dip"
    android:paddingTop="10dip" >

    <LinearLayout
        android:id="@+id/choujiang_layout"
        android:layout_width="fill_parent"
       android:layout_height="0dip"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:weightSum="1" >

        <TextView
            android:id="@+id/choujiang_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="幸运抽奖每一天"
            android:textColor="#232323"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/choujiang_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingRight="5dip"
            android:src="@drawable/choujiang_title_cancel" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/choujiang_layout"
        android:layout_marginTop="5dip"
        android:alpha="10"
        android:background="#808080" />

    <LinearLayout
        android:id="@+id/choujiang_layout1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:layout_below="@+id/line1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chouiv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:alpha="10"
            android:background="#808080" />

        <ImageView
            android:id="@+id/chouiv2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:alpha="10"
            android:background="#808080" />

        <ImageView
            android:id="@+id/chouiv3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:alpha="10"
            android:background="#808080" />

        <ImageView
            android:id="@+id/chouiv4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/choujiang_layout1"
        android:alpha="10"
        android:background="#808080" />

    <LinearLayout
        android:id="@+id/choujiang_layout2"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:layout_below="@+id/line2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chouiv5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:alpha="10"
            android:background="#808080" />

        <ImageView
            android:id="@+id/chouiv6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:alpha="10"
            android:background="#808080" />

        <ImageView
            android:id="@+id/chouiv7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:alpha="10"
            android:background="#808080" />

        <ImageView
            android:id="@+id/chouiv8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/choujiang_layout2"
        android:alpha="10"
        android:background="#808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/choujiang_shop"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_below="@+id/choujiang_layout2"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:paddingTop="5dip"
            android:text="所获实物奖品已经在微保商场自动生成免费订单"
            android:textColor="#232323"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/choujiangintro"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/choujiang_layout2"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:paddingTop="4dip"
            android:text="奖品介绍"
            android:textColor="#005aff"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>