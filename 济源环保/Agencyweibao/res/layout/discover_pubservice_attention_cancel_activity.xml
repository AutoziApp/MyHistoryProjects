<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiscoverPubServiceAttentionCancelActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/current_title_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/particular1_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/update_btn"
            android:src="@drawable/title_back_selector" />

        <TextView
            android:id="@+id/sms_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/particular1_iv"
            android:gravity="center_horizontal"
            android:text="详细资料"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/particular2_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/empty_photo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/particular2_icon"
                android:layout_below="@+id/particular2_icon"
                android:layout_marginTop="18dp"
                android:text="功能介绍" />

            <TextView
                android:id="@+id/particular2_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/particular2_sum"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:text="--" />

            <TextView
                android:id="@+id/particular2_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/particular2_icon"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/textView2"
                android:text="遥看" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/whiteline"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00" >

            <TextView
                android:id="@+id/particular2_tv1"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:gravity="left"
                android:text="查看历史消息" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/particular2_guanzhu"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bt_guanzhu" />

</LinearLayout>