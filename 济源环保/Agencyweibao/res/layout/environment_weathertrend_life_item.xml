<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/life_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp" >


        <ImageView
            android:id="@+id/life_activity_item_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:layout_gravity="center_vertical"
             />
        
            <ImageView
            android:id="@+id/height"
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/life_activity_item_tv2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:layout_gravity="left"
                android:layout_marginLeft="10dip"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/life_activity_item_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingTop="10dip"
                android:paddingLeft="40dip"
                android:layout_toRightOf="@+id/life_activity_item_tv2"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/life_activity_item_tv3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingTop="5dip"
                android:paddingLeft="10dip"
                android:layout_below="@+id/life_activity_item_tv2"
                android:ems="15"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/life_activity_item_iv2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/life_down" />
    </LinearLayout>

</LinearLayout>