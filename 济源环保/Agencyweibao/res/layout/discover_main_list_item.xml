<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fcfcfc"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/mm_listitem"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/explorer_item_iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:paddingLeft="2dp" />

        <FrameLayout
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:background="@null" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/explorer_item2_iv2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                android:gravity="top|right" >

                <TextView
                    android:id="@+id/explorer_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_unread_bg"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="10.0dip"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/explorer_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/explorer_item_iv1"
            android:paddingTop="13dp"
            android:text="题目"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/explorer_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:text="昨天 晚上"
            android:textColor="#666"
            android:visibility="gone" />

        <TextView
            android:id="@+id/explorer_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/explorer_item_iv1"
            android:paddingBottom="13dp"
            android:text="介绍..."
            android:textColor="#BBBBBB"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/explorer_item_right"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/rightarrows" />
    </RelativeLayout>

</LinearLayout>