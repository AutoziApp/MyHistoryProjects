<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mapuni.car.mvp.searchcar.gotoview.view.CarlistReviseActivity">

    <include layout="@layout/title_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="车牌号码:豫J123456"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/albumback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="车牌颜色:蓝色"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/albumback" />

    <TextView
        android:id="@+id/tv_name_carinfo"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="行驶信息:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/albumback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="申请人:小米"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/albumback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="申请时间:2017-11-22"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/albumback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="添加图片："
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
