<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
        <TableRow
            android:id="@+id/info_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/username_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="姓名" />
            <TextView
                android:id="@+id/jckh_info_tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="下发" />
            <TextView
                android:id="@+id/jckh_info_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="执行" />
            <TextView
                android:id="@+id/jckh_info_tv3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="办结" />
            <TextView
                android:id="@+id/jckh_info_tv4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="企业" />
            <TextView
                android:id="@+id/jckh_info_tv5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="协办" />
            <TextView
                android:id="@+id/jckh_info_tv6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="登录" />
        </TableRow>
    </TableLayout>

   		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.mapuni.android.base.widget.PagingListView
                android:id="@+id/jckh_info_listview"
             
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >
            </com.mapuni.android.base.widget.PagingListView>
            
        </LinearLayout>


</LinearLayout>