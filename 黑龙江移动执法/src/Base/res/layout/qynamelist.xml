<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qylb_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/qylb_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/specialitem_right" />

        <TextView
            android:id="@+id/qymc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgzf"
            android:layout_toRightOf="@+id/img"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/qyzt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qymc_text"
            android:layout_toRightOf="@+id/img"
            android:singleLine="false"
            android:text="待执行"
            android:textColor="@color/dblue"
            android:textSize="15sp" />

        <Button
            android:id="@+id/qydel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/task_list_delete"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/black" />
    </RelativeLayout>

</LinearLayout>