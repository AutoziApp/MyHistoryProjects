<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_qy"
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

        <TableLayout
            android:id="@+id/addqytableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" 
            android:layout_gravity="center_vertical">

            <TableRow
                android:id="@+id/addqyRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_gravity="center_vertical">

                <TextView 
                    android:id="@+id/addqytitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/blueviolet"
                    android:text="@string/addqytext"
                     />
                <Button
                    android:id="@+id/addqyimg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/task_list_add" />
            </TableRow>
    </TableLayout>
     <TableLayout
            android:id="@+id/qylisttableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
   <ListView  
       android:id="@+id/qylist"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:descendantFocusability="beforeDescendants"
       android:cacheColorHint="#00000000">
       
   </ListView>
    </TableLayout>
</LinearLayout>